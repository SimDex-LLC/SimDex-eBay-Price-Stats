{
    "name": "eBay Price Stats",
    "description": "Shows item price statistics of all eBay listings on a single search results page.",
    "author": "Geoff Myers / SimDex LLC",
    "homepage_url": "https://simdex.org",
    "version": "1.0",
    "manifest_version": 3,
    "content_scripts": [
        {
            "matches": [
                "https://*.ebay.com/sch/*"
            ],
            "js": [
                "ebay-price-stats.js"
            ],
            "css": [
                "ebay-price-stats.css"
            ],
            "run_at": "document_end"
        }
    ],
    "host_permissions": [],
    "permissions": [],
    "icons": {
        "16": "icon-16.png",
        "32": "icon-32.png",
        "64": "icon-64.png",
        "128": "icon-128.png",
        "256": "icon-256.png",
        "512": "icon-512.png"
    },
    "action": {
        "default_icon": {
            "16": "icon-16.png",
            "32": "icon-32.png",
            "64": "icon-64.png",
            "128": "icon-128.png",
            "256": "icon-256.png",
            "512": "icon-512.png"
        },
        "default_title": "eBay Price Stats"
    }
}